{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1 class="mb-5">Le Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ product.content }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }} $</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }} unit√©s</td>
            </tr>
        </tbody>
    </table>


        <h3 class="mt-5">Images</h3>
        <div class="row mb-5">
        {% for image in product.images %}
            <div class="col-md-6 text-center mt-5">
                <img src="{{ asset('/uploads/'~image.name) }}" alt="" width="400">
            </div>
        {% endfor %}
        </div>


    <a class="btn btn-primary" href="{{ path('products_index') }}">Retour</a>
    <a class="btn btn-primary" href="{{ path('products_edit', {'id': product.id}) }}">Editer</a>

    {{ include('products/_delete_form.html.twig') }}
{% endblock %}
