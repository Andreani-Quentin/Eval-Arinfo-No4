{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<section class="">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                <p>Vous Ãªtes loger sous {{ app.user.username }}</p>
                <a class="btn btn-primary" href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        {% if not app.user %}
        <h1 class="h3 mb-5 font-weight-normal">Connexion</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label class="mt-3" for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="d-flex justify-content-between mt-4">
            <a class="btn btn-primary" href="/register">S'inscrire</a>
            <button class="btn btn-primary" type="submit">Connexion</button>
        </div>
        {% endif %}
    </form>
</section>
{% endblock %}
